<section class="auth-card">
  <div class="auth-left">
    <div class="auth-tabs">
      <div class="tab active">LOGIN</div>
      <div class="tab">SIGN UP</div>
    </div>
    <div class="auth-hero">
      <!-- decorative â€” follow reference image -->
      <div class="hero-graphic"></div>
    </div>
  </div>

  <div class="auth-right">
    <div class="form-card">
  <img src="/icons/adaweb_icon.png" alt="ADAWEB" class="auth-logo" />
      <h2 class="form-title">Login</h2>

      <form action="/login" method="post" class="auth-form">
        <label class="sr-only">Email</label>
        <input type="email" name="email" placeholder="Email" required />

        <label class="sr-only">Password</label>
        <input type="password" name="password" placeholder="Password" required />

        <button class="btn btn-primary" type="submit">LOGIN</button>
      </form>

      <p class="helper">Belum punya akun? <a href="/register">Daftar di sini</a></p>

      <div class="divider"><span>atau</span></div>

      <div class="social-login">
        <a class="btn btn-social google" href="#">Login dengan Google</a>
        <a class="btn btn-social facebook" href="#">Login dengan Facebook</a>
      </div>
    </div>
  </div>
</section>
