<section class="auth-card">
  <div class="auth-left">
    <div class="auth-tabs">
      <div class="tab">LOGIN</div>
      <div class="tab active">SIGN UP</div>
    </div>
    <div class="auth-hero"></div>
  </div>

  <div class="auth-right">
    <div class="form-card">
  <img src="/icons/adaweb_icon.png" alt="ADAWEB" class="auth-logo" />
      <h2 class="form-title">Create account</h2>

      <form action="/register" method="post" class="auth-form">
        <label class="sr-only">Email</label>
        <input type="email" name="email" placeholder="Email" required />

        <label class="sr-only">Username</label>
        <input type="text" name="username" placeholder="Username" required />

        <label class="sr-only">Password</label>
        <input type="password" name="password" placeholder="Password" required />

        <button class="btn btn-primary" type="submit">SIGN UP</button>
      </form>

      <p class="helper">Sudah punya akun? <a href="/login">Masuk di sini</a></p>

      <div class="divider"><span>atau</span></div>

      <div class="social-login">
        <a class="btn btn-social google" href="#">Daftar dengan Google</a>
        <a class="btn btn-social facebook" href="#">Daftar dengan Facebook</a>
      </div>
    </div>
  </div>
</section>
