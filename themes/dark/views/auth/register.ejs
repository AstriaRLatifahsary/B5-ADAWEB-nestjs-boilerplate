<section class="auth-card">
  <div class="auth-left">
    <div class="auth-tabs">
      <a href="login" class="tab <%= page === 'login' ? 'active' : '' %>">LOGIN</a>
      <a href="register" class="tab <%= page === 'register' ? 'active' : '' %>">SIGN UP</a>
    </div>
    <div class="auth-hero"></div>
  </div>

  <div class="auth-right">
    <div class="form-card">
      <img src="/icons/adaweb_icon.png" alt="ADAWEB" class="auth-logo" />
      <h2 class="form-title">Create account</h2>

      <form action="/register" method="post" class="auth-form">
        <label class="sr-only">Email</label>
        <input type="email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" placeholder="Email" required />

        <label class="sr-only">Username</label>
        <input type="text" name="username" value="<%= typeof username !== 'undefined' ? username : '' %>" placeholder="Username" required />

        <label class="sr-only">Password</label>
        <input type="password" name="password" placeholder="Password" required />

        <% if (typeof error !== 'undefined') { %>
          <div class="form-error"><%= error %></div>
        <% } %>

        <button class="btn btn-primary" type="submit">SIGN UP</button>
      </form>

  <p class="helper">Sudah punya akun? <a href="login">Masuk di sini</a></p>

      <div class="divider"><span>atau</span></div>

      <div class="social-login">
        <a class="btn btn-social google" href="#">
          <img src="/icons/google.png" alt="Google" style="width:32px;height:30px;display:inline-block;vertical-align:middle" />
          <span>Lanjut dengan Google</span>
        </a>
      </div>
    </div>
  </div>
</section>
